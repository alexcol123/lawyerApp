datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}
model Perfil {
  id           String   @id @default(uuid())
  clerkId      String   @unique
  nombre       String
  apellido     String
  usuario      String
  email        String
  imagenPerfil String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt


}
